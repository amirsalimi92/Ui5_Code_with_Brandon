<mvc:View controllerName="myapp.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Shell >
        <App>
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <headerContent>
                        <Button icon="sap-icon://hello-world" press=".onOpenDialog" />
                    </headerContent>
                    <content>
                        <!-- Reference to another view -->
                        <mvc:XMLView viewName="myapp.view.HelloPanel"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>